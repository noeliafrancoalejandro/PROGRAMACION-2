// mcd.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;

void main()
{
  int a,b,c,mcd,cont,menor;
   cout<<"ingrese a";
   cin>>a;
   cout<<"ingrese b";
   cin>>b;
   cout<<"ingrese c";
   cin>>c;
if(a>b&&a<c)
  menor=a;
else
  {
  if(a<b&&b<c)
    menor=b;
  else 
    menor=c;
   }
mcd=1;
cont=2;
while(cont<=menor)
{
	if((a%cont==0)&&(b%cont==0)&&(c%cont==0))
	{	
		a=a/cont;
		b=b/cont;
		c=c/cont;
        menor=menor/cont;
        mcd=mcd*cont;
		cont=cont-1;
	}
	cont=cont+1;
}
cout<<"el mcd es";
cout<<mcd;
getch();
}
