8// practico 5.cpp : main project file.

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
using namespace std;
void main ()
{
 float i,suma,x,n,f;
 cout<<"introduzca n ";
 cin>>n;
 cout<<"introdusca x";
 cin>>x;
 suma=0;
 f=1;
 for(i=1;i<=n;i=i++)
	 {
	     f=f*i;
	     suma=(suma+(pow(x,i)/f));

       }
  cout<<"la suma de los  primeros numeros por horner es";
  cout<<suma;
 getch();
}

9/ practico 5.cpp : main project file.

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
using namespace std;
void main ()
{
 float suma,x,f;
 int n,i;
 cout<<"introduzca n ";
 cin>>n;
 cout<<"introdusca x";
 cin>>x;
 suma=0;
 f=1;
 sig= 1;
 for(i=1;i<=n;i=i+2)
	 f=f*i;
    {
    if(n%2==0)
	 suma=(suma+(pow(x,i)/f));
    else
     suma=(suma-(pow(x,i)/f));
	}
  cout<<"la suma de los  primeros numeros por horner es";
  cout<<suma;
  getch();
}


 10// practico 5.cpp : main project file.

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
using namespace std;
void main ()
{
 float suma,x,f,sig;
 int n,i;
 cout<<"introduzca n ";
 cin>>n;
 cout<<"introdusca x";
 cin>>x;
 suma=0;
 f=1;
 sig=1;
 for(i=1;i<=n;i=i++)
	 f=f*i;
	 suma=(suma+sig*(pow(x,i)/f));
       sig=sig*(-1);
	
  cout<<"la suma de los  primeros numeros por horner es";
  cout<<suma;
  getch();
}

 
  
  
  
  
  
  
  
  
  
  
  
