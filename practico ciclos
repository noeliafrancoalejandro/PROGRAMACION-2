  1// practico 5.cpp : main project file.

#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;
void main ()
{
 int n,suma,i;
 cout<<"introduzca n ";
 cin>>n;
 suma=0;
 for(i=1;i<=n;i++)
  suma=suma+i;
  cout<<"la suma de los n primeros numeros es";
  cout<<suma;
 getch();
}
2// practico 5.cpp : main project file.
#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;
void main ()
{
 int n,suma,i;
 cout<<"introduzca n ";
 cin>>n;
 suma=0;
 for(i=1;i<=n;i=i+2)
  suma=suma+i;
  cout<<"la suma de los n primeros numeros imapares es";
  cout<<suma;
 getch();
}
3// practico 5.cpp : main project file.

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
using namespace std;
void main ()
{
 int n,suma;
 float i;
 cout<<"introduzca n ";
 cin>>n;
 suma=0;
 for(i=1;i<=n;i=i++)
	 suma=suma+pow(i,2);
  cout<<"la suma de los n primeros numeros cuadrados es";
  cout<<suma;
 getch();
}

4// practico 5.cpp : main project file.

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
using namespace std;
void main ()
{
 int n,suma, i;
 cout<<"introduzca n ";
 cin>>n;
 suma=0;
 for(i=1;i<=n;i=i++)
	 {
	 if(i%2==0)
	   suma=suma-i;
   else 
	   suma=suma+i;
        }
  cout<<"la suma de los n primeros numeros  es";
  cout<<suma;
 getch();
}

