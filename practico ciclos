6// practico 5.cpp : main project file.

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
using namespace std;
void main ()
{
 float i,suma,x,n;
 cout<<"introduzca n ";
 cin>>n;
 cout<<"introdusca x";
 cin>>x;
 suma=0;
 for(i=1;i<=n;i=i++)
	 suma=suma+pow(x,i);
  cout<<"la suma de los n primeros numeros por horner es";
  cout<<suma;
 getch();
}

